{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/streamix",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@epikodelabs/streamix/coroutines": [
        "./projects/libraries/streamix/coroutines/src/lib/index.ts"
      ],
      "@epikodelabs/streamix/dom": [
        "./projects/libraries/streamix/dom/src/lib/index.ts"
      ],
      "@epikodelabs/streamix/networking": [
        "./projects/libraries/streamix/networking/src/lib/index.ts"
      ],
      "@epikodelabs/streamix/tracing": [
        "./projects/libraries/streamix/tracing/src/lib/index.ts"
      ],
      "@epikodelabs/streamix": [
        "./projects/libraries/streamix/src/lib/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "jspm_packages",
    "dist",
    "out-tsc",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "references": [
    {
      "path": "projects/libraries/streamix/tsconfig.spec.json"
    }
  ]
}


