{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/streamix",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ESNext",
    "module": "ESNext",
    "useDefineForClassFields": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "paths": {
      "@epikodelabs/streamix/aggregates": [
        "./projects/libraries/streamix/aggregates/src/lib/index.ts"
      ],
      "@epikodelabs/streamix/coroutines": [
        "./projects/libraries/streamix/coroutines/src/lib/index.ts"
      ],
      "@epikodelabs/streamix/dom": [
        "./projects/libraries/streamix/dom/src/lib/index.ts"
      ],
      "@epikodelabs/streamix/networking": [
        "./projects/libraries/streamix/networking/src/lib/index.ts"
      ],
      "@epikodelabs/streamix/tracing": [
        "./projects/libraries/streamix/tracing/src/lib/index.ts"
      ],
      "@epikodelabs/streamix": [
        "./projects/libraries/streamix/src/lib/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
    "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}


