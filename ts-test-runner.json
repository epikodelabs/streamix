{
  "srcDirs": [
    "./projects/libraries/streamix/src/lib"
  ],
  "testDirs": [
    "./projects/libraries/streamix/src/tests"
  ],
  "exclude": [
    "**/node_modules/**"
  ],
  "preserveOutputs": false,
  "outDir": "dist/.vite-jasmine-build",
  "browser": "chrome",
  "headless": false,
  "port": 8888,
  "viteBuildOptions": {
    "target": "es2022",
    "sourcemap": true,
    "minify": false,
    "preserveModules": false,
    "preserveModulesRoot": "."
  },
  "jasmineConfig": {
    "env": {
      "stopSpecOnExpectationFailure": false,
      "random": true,
      "timeout": 120000
    }
  },
  "htmlOptions": {
    "title": "Jasmine Tests Runner"
  }
}
