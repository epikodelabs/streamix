{
  "srcDir": "./projects/libraries/streamix/src/lib",
  "testDir": "./projects/libraries/streamix/src/tests",
  "outDir": "./dist/.vite-jasmine-build/",
  "browser": "chrome",
  "headless": false,
  "coverage": true,
  "port": 8888,
  "viteBuildOptions": {
    "target": "es2022",
    "sourcemap": true,
    "minify": false,
    "preserveModules": true,
    "preserveModulesRoot": "."
  },
  "jasmineConfig": {
    "env": {
      "stopSpecOnExpectationFailure": false,
      "random": true,
      "timeout": 120000
    },
    "browser": {
      "name": "chrome",
      "headless": false
    },
    "reporter": "console"
  },
  "htmlOptions": {
    "title": "Jasmine Test Runner",
    "includeSourceScripts": true,
    "includeSpecScripts": true
  }
}